{
  "name": "root",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/heiyehk/hyjs.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "node scripts/clean.mjs",
    "build": "npm run clean && lerna run build --stream && rollup -c",
    "build:ci": "cross-env UMD=1 npm run build",
    "lint": "eslint ./packages --ext ts",
    "fix": "eslint ./packages --ext ts --fix",
    "doc": "docsify",
    "doc:init": "docsify init .",
    "doc:serve": "docsify serve .",
    "tsc": "node scripts/tsconfig.mjs",
    "pkgn": "node scripts/packageJson.mjs",
    "doc:bar": "node scripts/docBar.mjs",
    "r": "rollup -c -w",
    "test": "jest --coverage",
    "lerna": "lerna"
  },
  "devDependencies": {
    "@babel/core": "^7.22.11",
    "@babel/plugin-transform-runtime": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "@babel/preset-typescript": "^7.22.11",
    "@babel/runtime": "^7.22.11",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@rollup/plugin-replace": "^5.0.2",
    "@tsconfig/svelte": "^5.0.2",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.7",
    "@types/rimraf": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "cross-env": "^7.0.3",
    "docsify-cli": "^4.4.4",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "fs-extra": "^11.1.1",
    "jest": "^29.6.4",
    "lerna": "^7.2.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "rollup": "^3.28.1",
    "rollup-plugin-svelte": "^7.1.6",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^4.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
